<% if flash[:errors] %>
  <%= render './errors/errors' %>
<% end %>

<%= form_with model: @track, class: 'form' do |f| %>
  <%= auth_token %>

  <p>
    <label for="track-album">Album</label>
    <select name="track[album_id]" id="track-album">

      <% Album.all.each do |album| %>

        <option value="<%= album.id %>" <%= 'selected' if @track.album_id == album.id %>>

          <%= album.title %>

        </option>

      <% end %>

    </select>
  </p>

  <p>
    <label for="track-title">Title</label>
    <input type="text" name="track[title]" id="track-title" value="<%= @track.title %>">
  </p>

  <p>
    <label for="track-ord">ord</label>
    <input type="number" name="track[ord]" id="track-ord" value="<%= @track.ord %>">
  </p>

  <p>
    <label for="track-bonus-f">Regular</label>
    <input type="radio" name="track[bonus]" id="track-bonus-f" <%= 'checked' if !@track.bonus %>>

    <label for="track-bonus-t">Bonus</label>
    <input type="radio" name="track[bonus]" id="track-bonus-t" <%= 'checked' if @track.bonus %>>
  </p>

  <p>
    <label for="track-lyrics">Lyrics</label>
    <textarea name="track[lyrics]" id="track-lyrics" cols="30" rows="10"><%= @track.lyrics %></textarea>
  </p>

  <input type="submit" value="Submit">
<% end %>